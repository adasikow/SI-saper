<Window x:Class="saper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Saper" Height="200" Width="300">
    <Grid>
        <Label Content="Liczba ładunków:" Height="30" HorizontalAlignment="Left" Margin="12,73,0,0" Name="explosivesCountBoxLabel" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="118,75,0,0" Name="explosivesCountBox" VerticalAlignment="Top" Width="30" TextChanged="explosivesCountBox_TextChanged" />
        <Label Content="Niepoprawna liczba ładunków" Height="28" HorizontalAlignment="Left" Margin="120,80,0,0" Name="wrongInputLabel" VerticalAlignment="Top" Visibility="Hidden" />
        <Button Content="Uruchom sapera" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="12,0,26,27" Name="startButton" Width="240" Click="startButton_Click" IsEnabled="False" />
    </Grid>
</Window>
