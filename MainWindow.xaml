<Window x:Class="saper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Saper" Height="200" Width="300">
    <Grid>
        <Label Content="Wybierz metodę rozwiązywania problemu:" Height="30" HorizontalAlignment="Center" Margin="0,10,0,0" Name="methodSelectionLabel" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Center" Margin="0,40,0,0" Name="methodSelectionBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Rozmiar pola:" Height="30" HorizontalAlignment="Left" Margin="10,80,0,0" Name="minefieldSizeLabel" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="90,80,0,0" Name="minefieldSizeBox" VerticalAlignment="Top" Width="30" TextChanged="minefieldSizeBox_TextChanged" />
        <Label Content="Niepoprawny rozmiar pola" Height="28" HorizontalAlignment="Left" Margin="120,80,0,0" Name="wrongInputLabel" VerticalAlignment="Top" Visibility="Hidden" />
        <Button Content="Uruchom sapera" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Name="startButton" Width="240" Click="startButton_Click" IsEnabled="False" />
    </Grid>
</Window>
